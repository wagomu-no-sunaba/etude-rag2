# Terraform variables example file
# Copy this file to terraform.tfvars and fill in the values

# =============================================================================
# Required variables
# =============================================================================

# Google Cloud Project ID
project_id = "your-gcp-project-id"

# GitHub repository in owner/repo format (for Workload Identity Federation)
github_repo = "wagomu-no-sunaba/etude-rag2"

# Google Drive folder ID containing RAG documents
target_folder_id = "your-google-drive-folder-id"

# Email address for ACL filtering
my_email = "your-email@example.com"

# =============================================================================
# Optional variables (defaults shown)
# =============================================================================

# Google Cloud region
# region = "us-central1"

# Environment name
# environment = "dev"

# Cloud SQL instance tier
# db_tier = "db-f1-micro"

# Database settings
# db_name = "rag_db"
# db_user = "raguser"

# Cloud Run API settings
# cloud_run_cpu           = "2"
# cloud_run_memory        = "4Gi"
# cloud_run_min_instances = 0
# cloud_run_max_instances = 10
# cloud_run_concurrency   = 80

# Cloud Run Streamlit settings
# streamlit_memory        = "4Gi"
# streamlit_cpu           = "2"
# streamlit_max_instances = 5

# Cloud Run Ingester settings
# ingester_memory  = "2Gi"
# ingester_cpu     = "2"
# ingester_timeout = 3600

# Vertex AI / LLM settings
# embedding_model = "text-embedding-004"
# llm_model       = "gemini-1.5-pro"
# llm_temperature = "0.3"

# Reranker settings
# reranker_model = "BAAI/bge-reranker-base"

# Hybrid search settings
# hybrid_search_k = "20"
# rrf_k           = "60"
